alias "ds"="du -hs -- * .[^.]* | sort -h"

alias "gparted"="env DISPLAY=$DISPLAY XAUTHORITY=$XAUTHORITY gparted"

alias ".."="cd .."
alias "..."="cd ../.."
alias "...."="cd ../../.."
alias "....."="cd ../../../.."
alias "......"="cd ../../../../.."

alias "~"="cd $(getent passwd "$(id -u -n)" 2>/dev/null | cut -d: -f6)"

alias "sudo"="doas "
alias "doas"="doas "
